<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
     <script src="https://kit.fontawesome.com/0f2a9eef6e.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-ewpanded~"false" aria-label="Toggle navigation"></button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>

              <li class="nav-link text-light">
                <i class="fas fa-home"></i>
                <%= link_to 'Home', user_path(current_user.id) %>
              </li>
              <li class="nav-link text-light">
                <i class="fa-solid fa-users"></i>
                <%= link_to 'Users', users_index_path %>
              </li>
              <li class="nav-link text-light">
                <i class="fas fa-book-open"></i>
                <%= link_to "Books", books_path %>
              </li>
              <li class="nav-link text-light">
                <i class="fas fa-sign-out-alt"></i>
                <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
            <% else %>
              <li class="nav-link text-light">
                <i class="fas fa-home"></i>
                <%= link_to 'Home', root_path %>
              </li>
              <li class="nav-link text-light">
                <i class="fas fa-link"></i>
                <%= link_to 'About', about_path %>
              </li>
              <li class="nav-link text-light">
                <i class="fas fa-user-plus"></i>
                <%= link_to "Sign up", new_user_registration_path %>
              </li>
              <li class="nav-link text-light">
                <i class="fas fa-sign-in-alt"></i>
                <%= link_to "Log in", new_user_session_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <main>
      <%= render 'layouts/flash' %>
      <p id="notice"></p>
      <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

   </body>
</html>