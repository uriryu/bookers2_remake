<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'books/info', book: @book %>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
     <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag @user.get_profile_image(100,100) %></br >
          <%= link_to @user.name, user_path(@user) %>
          <!--ここをどうするか質問すべきかも-->
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to "show", books_path(@user) %>
        </td>
        
        <td>
          <% if @user == current_user %>
            <%= link_to "Edit", edit_book_path(book.id), :class => "btn btn-success btn-sm" %>
          <% end %>
        </td>
        
        <td>
          <% if @user == current_user %>
            <%= link_to "Destroy", book_path(book.id), method: :delete, :class => "btn btn-danger btn-sm", "data-confirm" => "本当に削除しますか？" %>
          <% end %>
        </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>