<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'books/info', books: @books, user: @user %>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
      <% @book.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
            <% image_tag book.user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book_path(book.id) %>
          </td>
          <td><%= book.body %></td>
        </tr>
        <!--アンダースコアは変数の単語ごとに大文字にして分けるイメージ。名前の一部として扱われる。.はブックの情報の中のカラムを取り出せる-->
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>